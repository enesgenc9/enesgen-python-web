Shader "Custom/HologramShield"
{
    Properties
    {
        _MainTex ("Albedo Texture", 2D) = "white" {}
        _RimColor ("Rim Color", Color) = (0,0.5,0.5,0.0) // Kalkan rengi
        _RimPower ("Rim Power", Range(0.5,8.0)) = 3.0    // Parlaklık gücü
    }
    SubShader
    {
        Tags { "Queue" = "Transparent" } // Şeffaf obje
        
        CGPROGRAM
        #pragma surface surf Lambert alpha:fade

        struct Input {
            float3 viewDir; // Kameranın baktığı yön
        };

        float4 _RimColor;
        float _RimPower;

        void surf (Input IN, inout SurfaceOutput o) {
            // Matematiksel Büyü: Fresnel Etkisi
            // Yüzeyin normali ile kameranın açısını hesaplar (Dot Product)
            // Bu sayede objenin sadece kenarları parlar.
            half rim = 1.0 - saturate(dot (normalize(IN.viewDir), o.Normal));
            
            // Kalkanın rengini ve parlaklığını ayarla
            o.Emission = _RimColor.rgb * pow (rim, _RimPower);
            
            // Ortası daha şeffaf, kenarları daha mat
            o.Alpha = pow (rim, _RimPower);
        }
        ENDCG
    }
    Fallback "Diffuse"
}
