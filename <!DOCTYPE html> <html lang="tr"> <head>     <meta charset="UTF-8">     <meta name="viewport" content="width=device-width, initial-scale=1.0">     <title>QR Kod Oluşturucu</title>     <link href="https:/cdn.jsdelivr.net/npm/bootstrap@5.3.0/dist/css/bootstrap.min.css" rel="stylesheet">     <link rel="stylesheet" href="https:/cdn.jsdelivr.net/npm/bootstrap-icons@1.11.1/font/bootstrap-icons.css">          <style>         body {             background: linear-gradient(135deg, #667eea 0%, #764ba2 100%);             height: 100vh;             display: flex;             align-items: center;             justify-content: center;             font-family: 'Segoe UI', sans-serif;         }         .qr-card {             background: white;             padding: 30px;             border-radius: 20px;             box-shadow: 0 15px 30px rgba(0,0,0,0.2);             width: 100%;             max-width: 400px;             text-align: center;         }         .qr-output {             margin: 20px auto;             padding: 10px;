    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
        }
        .qr-card {
            background: white;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 15px 30px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }
        .qr-output {
            margin: 20px auto;
            padding: 10px;
            border: 2px dashed #ddd;
            border-radius: 10px;
            min-height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        /* QR kodu resminin ortalanması için */
        .qr-output img {
            max-width: 100%;
        }
        .form-control:focus {
            box-shadow: none;
            border-color: #764ba2;
        }
        .btn-generate {
            background-color: #764ba2;
            color: white;
            width: 100%;
            font-weight: 600;
        }
        .btn-generate:hover {
            background-color: #5b3a7d;
            color: white;
        }
        .btn-download {
            background-color: #28a745;
            color: white;
            width: 100%;
            display: none; /* Başlangıçta gizli */
        }
        .btn-download:hover { background-color: #218838; color: white; }
    </style>
