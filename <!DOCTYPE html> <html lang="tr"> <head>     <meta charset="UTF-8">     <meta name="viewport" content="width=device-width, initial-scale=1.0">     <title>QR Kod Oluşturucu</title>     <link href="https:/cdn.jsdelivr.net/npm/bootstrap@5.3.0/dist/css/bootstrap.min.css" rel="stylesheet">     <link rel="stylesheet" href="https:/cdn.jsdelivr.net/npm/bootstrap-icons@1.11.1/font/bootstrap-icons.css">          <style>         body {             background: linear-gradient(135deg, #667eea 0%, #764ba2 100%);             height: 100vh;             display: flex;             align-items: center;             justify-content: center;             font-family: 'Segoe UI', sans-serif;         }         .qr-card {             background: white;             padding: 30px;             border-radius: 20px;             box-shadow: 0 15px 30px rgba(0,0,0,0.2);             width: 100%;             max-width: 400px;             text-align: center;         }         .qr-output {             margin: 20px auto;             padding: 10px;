<body>

    <div class="qr-card">
        <h3 class="fw-bold mb-3"><i class="bi bi-qr-code-scan me-2"></i>QR Oluşturucu</h3>
        <p class="text-muted small">Bir metin veya URL girin, QR kodunuzu oluşturun.</p>

        <div class="mb-3">
            <input type="text" class="form-control form-control-lg" id="qrText" placeholder="Örn: https://google.com">
        </div>

        <button class="btn btn-generate btn-lg mb-3" onclick="generateQR()">
            Oluştur
        </button>

        <div class="qr-output" id="qrCodeContainer">
            <span class="text-muted" id="placeholderText">QR Kod burada görünecek</span>
        </div>

        <a id="downloadBtn" class="btn btn-download btn-lg" download="qrcode.png">
            <i class="bi bi-download me-2"></i>Resmi İndir
        </a>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>

    <script>
        // Değişkenler
        const qrContainer = document.getElementById('qrCodeContainer');
        const qrInput = document.getElementById('qrText');
        const downloadBtn = document.getElementById('downloadBtn');
        const placeholder = document.getElementById('placeholderText');
        let qrcode = null;

        function generateQR() {
            const text = qrInput.value;

            // Boş mu kontrol et
            if (text.trim() === "") {
                alert("Lütfen bir metin veya link girin!");
                return;
            }

            // Önceki QR kodunu temizle
            qrContainer.innerHTML = "";
            
            // Yeni QR kodu oluştur (Kütüphane fonksiyonu)
            // QRCode(yer, ayarlar)
            qrcode = new QRCode(qrContainer, {
                text: text,
                width: 180,
                height: 180,
                colorDark : "#000000",
                colorLight : "#ffffff",
                correctLevel : QRCode.CorrectLevel.H
            });

            // İndirme butonunu hazırla (Biraz gecikme lazım ki resim oluşsun)
            setTimeout(() => {
                // Kütüphane bir <img> etiketi oluşturur, onun kaynağını (src) alıyoruz
                const img = qrContainer.querySelector("img");
                if (img) {
                    downloadBtn.href = img.src; // İndirme linkine resim verisini ata
                    downloadBtn.style.display = "block"; // Butonu göster
                }
            }, 300);
        }

        // Enter tuşuna basınca çalışsın
        qrInput.addEventListener("keypress", function(event) {
            if (event.key === "Enter") generateQR();
        });
    </script>
</body>
</html>
